# PostProber Environment Variables

# OpenAI API (for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Twitter/X OAuth Configuration
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_REDIRECT_URI=http://localhost:8000/api/auth/twitter/callback

# LinkedIn OAuth Configuration
# Get from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/api/auth/linkedin/callback

# Facebook/Instagram OAuth Configuration
# Get from: https://developers.facebook.com/apps
# Note: Use the same Facebook App for both Instagram and Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
INSTAGRAM_REDIRECT_URI=http://localhost:8000/api/auth/instagram/callback
FACEBOOK_REDIRECT_URI=http://localhost:8000/api/auth/facebook/callback

# Database Configuration
DATABASE_PATH=src/backend/database/postprober.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
